<Window x:Class="SoftielRemote.Agent.Views.ConnectionRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bağlantı İsteği" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#0f172a"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="True"
        Topmost="True"
        IsHitTestVisible="True"
        Focusable="True"
        ShowActivated="True"
        Visibility="Visible"
        Opacity="1.0"
        AllowsTransparency="False">
    
    <Border BorderBrush="#334155" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#1e293b" CornerRadius="8,8,0,0" Padding="20,15">
                <TextBlock x:Name="HeaderText" 
                          Text="Bağlantı İsteği" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold"/>
            </Border>
            
            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
                <!-- Request State -->
                <StackPanel x:Name="RequestStatePanel" Margin="0,0,0,20">
                    <TextBlock Text="Bir kullanıcı bu cihaza bağlanmak istiyor:" 
                              Foreground="#94a3b8" 
                              FontSize="14"
                              Margin="0,0,0,20"/>
                </StackPanel>
                
                <!-- Connected State -->
                <StackPanel x:Name="ConnectedStatePanel" Visibility="Collapsed" Margin="0,0,0,20">
                    <Border Background="#10b981" CornerRadius="6" Padding="15" Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✓" 
                                      Foreground="White" 
                                      FontSize="20" 
                                      FontWeight="Bold"
                                      Margin="0,0,10,0"/>
                            <TextBlock Text="Bağlantı Aktif" 
                                      Foreground="White" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="Ekran paylaşımı şu anda aktif. Bağlantıyı kesmek için aşağıdaki butona tıklayın." 
                              Foreground="#94a3b8" 
                              FontSize="13"
                              TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Requester Info -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Kullanıcı Adı:" 
                              Foreground="#64748b" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="RequesterNameText" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="IP Adresi:" 
                              Foreground="#64748b" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="RequesterIpText" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Device ID:" 
                              Foreground="#64748b" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="RequesterDeviceIdText" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="SemiBold"
                              TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Buttons -->
            <Border Grid.Row="2" Background="#1e293b" CornerRadius="0,0,8,8" Padding="20,15">
                <Grid>
                    <!-- Request Buttons -->
                    <StackPanel x:Name="RequestButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Border Background="#dc2626" CornerRadius="4" Margin="0,0,10,0">
                            <Button Content="Reddet" 
                                   Width="100" Height="35"
                                   Background="Transparent"
                                   Foreground="White"
                                   BorderThickness="0"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   Click="RejectButton_Click"/>
                        </Border>
                        <Border Background="#10b981" CornerRadius="4">
                            <Button Content="Kabul Et" 
                                   Width="100" Height="35"
                                   Background="Transparent"
                                   Foreground="White"
                                   BorderThickness="0"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   Click="AcceptButton_Click"/>
                        </Border>
                    </StackPanel>
                    
                    <!-- Connected Button -->
                    <StackPanel x:Name="ConnectedButtonsPanel" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Collapsed">
                        <Border Background="#dc2626" CornerRadius="4">
                            <Button Content="Bağlantıyı Kes" 
                                   Width="150" Height="35"
                                   Background="Transparent"
                                   Foreground="White"
                                   BorderThickness="0"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Cursor="Hand"
                                   Click="DisconnectButton_Click"/>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>


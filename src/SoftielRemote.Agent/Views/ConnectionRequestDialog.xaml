<Window x:Class="SoftielRemote.Agent.Views.ConnectionRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bağlantı İsteği" Height="300" Width="450"
        WindowStartupLocation="CenterScreen"
        Background="#0f172a"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="True"
        Topmost="True">
    
    <Border BorderBrush="#334155" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#1e293b" CornerRadius="8,8,0,0" Padding="20,15">
                <TextBlock Text="Bağlantı İsteği" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold"/>
            </Border>
            
            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Bir kullanıcı bu cihaza bağlanmak istiyor:" 
                          Foreground="#94a3b8" 
                          FontSize="14"
                          Margin="0,0,0,20"/>
                
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Kullanıcı Adı:" 
                              Foreground="#64748b" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="RequesterNameText" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="IP Adresi:" 
                              Foreground="#64748b" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="RequesterIpText" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="SemiBold"/>
                </StackPanel>
                
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Device ID:" 
                              Foreground="#64748b" 
                              FontSize="12"
                              Margin="0,0,0,5"/>
                    <TextBlock x:Name="RequesterDeviceIdText" 
                              Foreground="White" 
                              FontSize="14" 
                              FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Buttons -->
            <Border Grid.Row="2" Background="#1e293b" CornerRadius="0,0,8,8" Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="#dc2626" CornerRadius="4" Margin="0,0,10,0">
                        <Button Content="Reddet" 
                               Width="100" Height="35"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Cursor="Hand"
                               Click="RejectButton_Click"/>
                    </Border>
                    <Border Background="#10b981" CornerRadius="4">
                        <Button Content="Kabul Et" 
                               Width="100" Height="35"
                               Background="Transparent"
                               Foreground="White"
                               BorderThickness="0"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Cursor="Hand"
                               Click="AcceptButton_Click"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>


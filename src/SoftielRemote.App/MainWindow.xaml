<Window x:Class="SoftielRemote.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoftielRemote.App"
        mc:Ignorable="d"
        Title="Softiel Remote" Height="800" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="#000000"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        MinWidth="600"
        MinHeight="400"
        Icon="src/img/transparent.png"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        
        <!-- Gradient Brush: #0f172a -> Black -->
        <LinearGradientBrush x:Key="MainGradientBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#0f172a" Offset="0"/>
            <GradientStop Color="#1a1f2e" Offset="0.3"/>
            <GradientStop Color="#000000" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Primary Gradient Brush: Mavi Gradient (OKLCH renklerinden) -->
        <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#00A8FF" Offset="0.0"/>
            <GradientStop Color="#0066FF" Offset="0.5"/>
            <GradientStop Color="#0055FF" Offset="1.0"/>
        </LinearGradientBrush>
        
        <!-- Primary Gradient Brush Hover (biraz daha koyu) -->
        <LinearGradientBrush x:Key="PrimaryGradientBrushHover" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#0088DD" Offset="0.0"/>
            <GradientStop Color="#0055CC" Offset="0.5"/>
            <GradientStop Color="#0044BB" Offset="1.0"/>
        </LinearGradientBrush>
        
        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryGradientBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#00A8FF" Offset="0.0"/>
                                    <GradientStop Color="#0066FF" Offset="0.5"/>
                                    <GradientStop Color="#0055FF" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="6" Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#0088DD" Offset="0.0"/>
                                            <GradientStop Color="#0055CC" Offset="0.5"/>
                                            <GradientStop Color="#0044BB" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#4a4a4a"/>
                    <Setter Property="Foreground" Value="#888888"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1e293b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MaxHeight" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        Foreground="{TemplateBinding Foreground}"
                                        VerticalAlignment="Center"
                                        VerticalContentAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Window Border Frame -->
    <Border x:Name="WindowBorder" BorderBrush="#00A8FF" BorderThickness="1">
        <Grid>
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0f172a" Offset="0"/>
                        <GradientStop Color="#1a1f2e" Offset="0.3"/>
                        <GradientStop Color="#000000" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>
            
                <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Top Bar - Logo + Tabs + Controls -->
        <Border Grid.Row="0" 
                Background="#0f172a" 
                Padding="15,12"
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="src/img/transparent.png" 
                           Width="28" Height="28" 
                           Margin="0,0,10,0"
                           VerticalAlignment="Center"
                           Stretch="Uniform"/>
                    <TextBlock Text="Softiel Remote" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Tabs -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Margin="30,0,0,0">
                    <Button x:Name="NewConnectionTab"
                            Content="Yeni Bağlantı" 
                            Padding="15,8"
                            FontSize="14"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NavTabButton_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#00A8FF" Offset="0.0"/>
                                <GradientStop Color="#0066FF" Offset="0.5"/>
                                <GradientStop Color="#0055FF" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    <Button x:Name="AddDeviceTab"
                            Content="➕ Cihaz Ekle" 
                            Padding="15,8"
                            FontSize="14"
                            Foreground="#94a3b8"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NavTabButton_Click"
                            Margin="5,0,0,0"/>
                    <Button x:Name="AddressBookTab"
                            Content="📖 Adres Defteri" 
                            Padding="15,8"
                            FontSize="14"
                            Foreground="#94a3b8"
                            Background="Transparent"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="NavTabButton_Click"
                            Margin="5,0,0,0"/>
                </StackPanel>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="🗕" 
                            Width="42" Height="36" 
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"
                            Click="MinimizeButton_Click"
                            Cursor="Hand"
                            MouseEnter="WindowControl_MouseEnter"
                            MouseLeave="WindowControl_MouseLeave"
                            Margin="0,0,8,0"/>
                    <Button Content="🗖" 
                            Width="42" Height="36" 
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"
                            Click="MaximizeButton_Click"
                            Cursor="Hand"
                            MouseEnter="WindowControl_MouseEnter"
                            MouseLeave="WindowControl_MouseLeave"
                            Margin="0,0,8,0"/>
                    <Button Content="✕" 
                            Width="42" Height="36" 
                            Background="Transparent" 
                            Foreground="White"
                            BorderThickness="0"
                            Click="CloseButton_Click"
                            Cursor="Hand"
                            MouseEnter="CloseButton_MouseEnter"
                            MouseLeave="CloseButton_MouseLeave"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Remote Address Input Bar -->
        <Border Grid.Row="1" 
                Background="#0f172a" 
                Padding="20,12"
                BorderBrush="#1e293b"
                BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Green Checkmark Status -->
                <Border Grid.Column="0"
                        Width="20" Height="20" 
                        Background="#10b981" 
                        CornerRadius="10"
                        Margin="0,0,15,0"
                        VerticalAlignment="Center">
                    <TextBlock Text="✓" 
                               Foreground="White" 
                               FontSize="12" 
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                
                <!-- Remote Address Input -->
                <Grid Grid.Column="1" VerticalAlignment="Center">
                    <TextBox x:Name="RemoteAddressTextBox"
                             Text="{Binding RemoteDeviceId, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             VerticalAlignment="Center"
                             IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBooleanConverter}}">
                        <TextBox.ToolTip>
                            <ToolTip Content="Uzak Adresi Gir"/>
                        </TextBox.ToolTip>
                    </TextBox>
                    <TextBlock Text="Uzak cihaz ID'sini girin..."
                               Foreground="#64748b"
                               FontSize="13"
                               VerticalAlignment="Center"
                               Margin="12,0,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text, ElementName=RemoteAddressTextBox, Converter={StaticResource StringToVisibilityConverter}}"/>
                </Grid>
                
                <!-- Action Icons -->
                <StackPanel Grid.Column="2" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center"
                           Margin="15,0,0,0">
                    <Button Content="📄" 
                            Width="32" Height="32" 
                            Background="Transparent" 
                            Foreground="#94a3b8"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Dosya Paylaş"
                            FontSize="16"
                            Margin="0,0,5,0"/>
                    <Button Content="▶" 
                            Width="32" Height="32" 
                            Background="Transparent" 
                            Foreground="#94a3b8"
                            BorderThickness="0"
                            Cursor="Hand"
                            Command="{Binding ConnectCommand}"
                            ToolTip="Bağlan"
                            FontSize="14"
                            IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBooleanConverter}}"
                            Margin="0,0,5,0"/>
                    <Button Content="☰" 
                            Width="32" Height="32" 
                            Background="Transparent" 
                            Foreground="#94a3b8"
                            BorderThickness="0"
                            Cursor="Hand"
                            ToolTip="Menü"
                            FontSize="18"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Workspace ID Section -->
        <Border Grid.Row="2" Background="Transparent" Padding="20,30">
            <StackPanel HorizontalAlignment="Center">
                <!-- Device ID -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Margin="0,0,0,20">
                    <TextBlock Text="Bu çalışma alanı" 
                               Foreground="#94a3b8" 
                               FontSize="16"
                               VerticalAlignment="Center"
                               Margin="0,0,20,0"/>
                    <Grid>
                        <TextBlock x:Name="DeviceIdTextBlock"
                                   Text="{Binding FormattedDeviceId}" 
                                   FontSize="56" 
                                   FontWeight="Bold" 
                                   VerticalAlignment="Center"
                                   MinWidth="300"
                                   TextAlignment="Center"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="DeviceIdTextBlock_MouseLeftButtonDown">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#00A8FF" Offset="0.0"/>
                                    <GradientStop Color="#0066FF" Offset="0.5"/>
                                    <GradientStop Color="#0055FF" Offset="1.0"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                        <!-- Success Indicator -->
                        <Border x:Name="DeviceIdSuccessIndicator"
                                Background="#10b981"
                                CornerRadius="20"
                                Width="40" Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Opacity="0"
                                Visibility="Collapsed">
                            <Border.RenderTransform>
                                <ScaleTransform/>
                            </Border.RenderTransform>
                            <TextBlock Text="✓" 
                                       Foreground="White" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <Button x:Name="CopyDeviceIdButton"
                            Content="📋" 
                            Width="36" Height="36" 
                            Background="Transparent" 
                            Foreground="#94a3b8"
                            BorderThickness="0"
                            Margin="15,0,0,0"
                            Cursor="Hand"
                            Click="CopyDeviceId_Click"
                            ToolTip="Device ID'yi Kopyala"
                            FontSize="20"/>
                </StackPanel>
                
                <!-- Password -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <TextBlock Text="Password: " 
                               Foreground="#94a3b8" 
                               FontSize="18"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    <Grid>
                        <TextBlock x:Name="PasswordTextBlock"
                                   Text="{Binding Password}" 
                                   Foreground="White" 
                                   FontSize="28"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"
                                   MinWidth="200"
                                   TextAlignment="Center"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="PasswordTextBlock_MouseLeftButtonDown"/>
                        <!-- Success Indicator -->
                        <Border x:Name="PasswordSuccessIndicator"
                                Background="#10b981"
                                CornerRadius="20"
                                Width="40" Height="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Opacity="0"
                                Visibility="Collapsed">
                            <Border.RenderTransform>
                                <ScaleTransform/>
                            </Border.RenderTransform>
                            <TextBlock Text="✓" 
                                       Foreground="White" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <Button x:Name="CopyPasswordButton"
                            Content="📋" 
                            Width="36" Height="36" 
                            Background="Transparent" 
                            Foreground="#94a3b8"
                            BorderThickness="0"
                            Margin="15,0,0,0"
                            Cursor="Hand"
                            Click="CopyPassword_Click"
                            ToolTip="Password'ü Kopyala"
                            FontSize="20"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Tabs (Removed - Now in Top Bar) -->
        <Border Grid.Row="2" Background="Transparent" Padding="20,0,20,0" Visibility="Collapsed">
            <StackPanel Orientation="Horizontal">
                <Button Content="Haberler" 
                        x:Name="NewsTab"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="TabButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#00A8FF" Offset="0.0"/>
                            <GradientStop Color="#0066FF" Offset="0.5"/>
                            <GradientStop Color="#0055FF" Offset="1.0"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
                <Button Content="Favoriler" 
                        x:Name="FavoritesTab"
                        Background="Transparent"
                        Foreground="#94a3b8"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        Cursor="Hand"
                        Click="TabButton_Click"/>
                <Button Content="Son Oturumlar" 
                        x:Name="RecentSessionsTab"
                        Background="Transparent"
                        Foreground="#94a3b8"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        Cursor="Hand"
                        Click="TabButton_Click"/>
                <Button Content="Keşfedildi" 
                        x:Name="DiscoveredTab"
                        Background="Transparent"
                        Foreground="#94a3b8"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        Cursor="Hand"
                        Click="TabButton_Click"/>
                <Button Content="Davetler" 
                        x:Name="InvitationsTab"
                        Background="Transparent"
                        Foreground="#94a3b8"
                        BorderThickness="0"
                        Padding="20,12"
                        FontSize="14"
                        Cursor="Hand"
                        Click="TabButton_Click"/>
            </StackPanel>
        </Border>
        
        <!-- Content Area -->
        <ScrollViewer Grid.Row="3" 
                      VerticalScrollBarVisibility="Auto"
                      Padding="20,20">
            <StackPanel>
                <!-- News Section -->
                <StackPanel x:Name="NewsSection" Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="📰" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Haberler" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Items>
                            <!-- Card 1 -->
                            <Border Background="#1e293b" 
                                    CornerRadius="8" 
                                    Padding="15" 
                                    Margin="5"
                                    Width="220"
                                    BorderBrush="#334155"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="SoftielRemote'i Keşfet" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Yeni özellikler ve güncellemeler hakkında bilgi edinin." 
                                               Foreground="#94a3b8" 
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10"/>
                                    <Button Content="Daha fazla bilgi" 
                                            Background="#334155"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,6"
                                            FontSize="12"
                                            Cursor="Hand"
                                            Margin="0,5,0,0"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Card 2 -->
                            <Border Background="#1e293b" 
                                    CornerRadius="8" 
                                    Padding="15" 
                                    Margin="5"
                                    Width="220"
                                    BorderBrush="#334155"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="📥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="Kurulum" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="SoftielRemote'i bu bilgisayara kurun" 
                                               Foreground="#94a3b8" 
                                               FontSize="11"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Card 3 -->
                            <Border Background="#1e293b" 
                                    CornerRadius="8" 
                                    Padding="15" 
                                    Margin="5"
                                    Width="220"
                                    BorderBrush="#334155"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="🔍" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="Keşfetme" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    <TextBlock Text="Yerel ağınızdaki diğer cihazları bulun" 
                                               Foreground="#94a3b8" 
                                               FontSize="11"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               Margin="0,0,0,10"/>
                                    <Button Content="Şimdi etkinleştir" 
                                            Background="#334155"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,6"
                                            FontSize="12"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Card 4 -->
                            <Border Background="#1e293b" 
                                    CornerRadius="8" 
                                    Padding="15" 
                                    Margin="5"
                                    Width="220"
                                    BorderBrush="#334155"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="🎥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <TextBlock Text="Ekranı Kaydet" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Card 5 -->
                            <Border Background="#1e293b" 
                                    CornerRadius="8" 
                                    Padding="15" 
                                    Margin="5"
                                    Width="220"
                                    BorderBrush="#334155"
                                    BorderThickness="1">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                                        <Button Content="✕" 
                                                Width="20" Height="20"
                                                Background="Transparent"
                                                Foreground="#94a3b8"
                                                BorderThickness="0"
                                                Padding="0"
                                                FontSize="12"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                    <TextBlock Text="Geliştirmemize Yardım Edin" 
                                               Foreground="White" 
                                               FontSize="14" 
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Kullanıcı deneyimini iyileştirmek için veri toplama izni verin" 
                                               Foreground="#94a3b8" 
                                               FontSize="11"
                                               TextWrapping="Wrap"
                                               Margin="0,0,0,10"/>
                                    <Button Content="Veri toplama izni ver" 
                                            Background="#334155"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Padding="10,6"
                                            FontSize="12"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </Border>
                        </ItemsControl.Items>
                    </ItemsControl>
                </StackPanel>
                
                <!-- Recent Sessions Section -->
                <StackPanel x:Name="RecentSessionsSection">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="🖥️" FontSize="18" Margin="0,0,10,0"/>
                        <TextBlock Text="Son Oturumlar" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Tümünü göster"
                                   FontSize="12"
                                   Margin="20,0,0,0"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="ShowAllSessions_Click">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#00A8FF" Offset="0.0"/>
                                    <GradientStop Color="#0066FF" Offset="0.5"/>
                                    <GradientStop Color="#0055FF" Offset="1.0"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>
                    
                    <ItemsControl>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.Items>
                            <!-- Session Card 1 -->
                            <Border Background="#1e293b" 
                                    CornerRadius="8" 
                                    Height="120"
                                    Width="180"
                                    Margin="5"
                                    BorderBrush="#334155"
                                    BorderThickness="1"
                                    Cursor="Hand"
                                    MouseLeftButtonDown="SessionCard_Click">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" 
                                            Background="#0f172a" 
                                            CornerRadius="6,6,0,0">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Margin="0,0,0,5">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#00A8FF" Offset="0.0"/>
                                                        <GradientStop Color="#0066FF" Offset="0.5"/>
                                                        <GradientStop Color="#0055FF" Offset="1.0"/>
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock Text="⭐" FontSize="16" HorizontalAlignment="Right" Margin="0,-20,5,0"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="1" 
                                            Background="#1e293b" 
                                            CornerRadius="0,0,6,6">
                                        <StackPanel Margin="10,8">
                                            <TextBlock Text="123456789" 
                                                       Foreground="White" 
                                                       FontSize="12" 
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                            
                            <!-- More session cards (simplified) -->
                            <Border Background="#1e293b" CornerRadius="8" Height="120" Width="180" Margin="5" BorderBrush="#334155" BorderThickness="1" Cursor="Hand" MouseLeftButtonDown="SessionCard_Click">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#0f172a" CornerRadius="6,6,0,0">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Margin="0,0,0,5">
                                                <Ellipse.Fill>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                        <GradientStop Color="#00A8FF" Offset="0.0"/>
                                                        <GradientStop Color="#0066FF" Offset="0.5"/>
                                                        <GradientStop Color="#0055FF" Offset="1.0"/>
                                                    </LinearGradientBrush>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="1" Background="#1e293b">
                                        <StackPanel Margin="10,8">
                                            <TextBlock Text="987654321" Foreground="White" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                            
                            <Border Background="#1e293b" CornerRadius="8" Height="120" Width="180" Margin="5" BorderBrush="#334155" BorderThickness="1" Cursor="Hand" MouseLeftButtonDown="SessionCard_Click">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Background="#0f172a" CornerRadius="6,6,0,0">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Fill="#10b981" Margin="0,0,0,5"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Grid.Row="1" Background="#1e293b">
                                        <StackPanel Margin="10,8">
                                            <TextBlock Text="{Binding YourDeviceId}" Foreground="White" FontSize="12" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </ItemsControl.Items>
                    </ItemsControl>
                </StackPanel>
                
                <!-- Remote Screen View (when connected) -->
                <Border x:Name="RemoteScreenBorder"
                        Background="#000000" 
                        CornerRadius="8" 
                        Margin="0,20,0,0"
                        BorderBrush="#334155"
                        BorderThickness="1"
                        Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}}">
    <Grid>
                        <Image Source="{Binding RemoteScreenImage}" 
                               Stretch="Uniform" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                        <StackPanel HorizontalAlignment="Right" 
                                    VerticalAlignment="Top" 
                                    Margin="10">
                            <Button Content="Disconnect" 
                                    Command="{Binding DisconnectCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Margin="0,0,0,10"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
                </Grid>
            
            <!-- Resize Handles - En üste taşındı (ZIndex ile) -->
            <!-- Köşeler -->
            <Border x:Name="ResizeHandleTopLeft"
                    Background="Transparent" 
                    Cursor="SizeNWSE" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="15" 
                    Height="15"
                    Panel.ZIndex="9999"
                    IsHitTestVisible="True"
                    MouseLeftButtonDown="ResizeWindow_Start"/>
            <Border x:Name="ResizeHandleTopRight"
                    Background="Transparent" 
                    Cursor="SizeNESW" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Width="15" 
                    Height="15"
                    Panel.ZIndex="9999"
                    IsHitTestVisible="True"
                    MouseLeftButtonDown="ResizeWindow_Start"/>
            <Border x:Name="ResizeHandleBottomRight"
                    Background="Transparent" 
                    Cursor="SizeNWSE" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom" 
                    Width="15" 
                    Height="15"
                    Panel.ZIndex="9999"
                    IsHitTestVisible="True"
                    MouseLeftButtonDown="ResizeWindow_Start"/>
            <Border x:Name="ResizeHandleBottomLeft"
                    Background="Transparent" 
                    Cursor="SizeNESW" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Bottom" 
                    Width="15" 
                    Height="15"
                    Panel.ZIndex="9999"
                    IsHitTestVisible="True"
                    MouseLeftButtonDown="ResizeWindow_Start"/>
            <!-- Kenarlar -->
            <Border x:Name="ResizeHandleTop"
                    Background="Transparent" 
                    Cursor="SizeNS" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Top" 
                    Height="8"
                    Panel.ZIndex="9999"
                    IsHitTestVisible="True"
                    MouseLeftButtonDown="ResizeWindow_Start"/>
            <Border x:Name="ResizeHandleBottom"
                    Background="Transparent" 

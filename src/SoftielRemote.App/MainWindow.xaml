                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Bottom" 
                    Height="8"
                    Panel.ZIndex="9999"
                    IsHitTestVisible="True"
                    MouseLeftButtonDown="ResizeWindow_Start"/>
            <Border x:Name="ResizeHandleLeft"
                    Background="Transparent" 
                    Cursor="SizeWE" 
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Stretch" 
                    Width="8"
                    Panel.ZIndex="9999"
                    IsHitTestVisible="True"
                    MouseLeftButtonDown="ResizeWindow_Start"/>
            <Border x:Name="ResizeHandleRight"
                    Background="Transparent" 
                    Cursor="SizeWE" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Stretch" 
                    Width="8"
                    Panel.ZIndex="9999"
                    IsHitTestVisible="True"
                    MouseLeftButtonDown="ResizeWindow_Start"/>
    </Grid>
    </Border>
</Window>

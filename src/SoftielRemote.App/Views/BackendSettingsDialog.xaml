<Window x:Class="SoftielRemote.App.Views.BackendSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Backend Ayarları" Height="250" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#0f172a"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False">
    
    <Border BorderBrush="#334155" BorderThickness="1" CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#1e293b" CornerRadius="8,8,0,0" Padding="20,15">
                <TextBlock Text="Backend Ayarları" 
                          Foreground="White" 
                          FontSize="18" 
                          FontWeight="Bold"/>
            </Border>
            
            <!-- Content -->
            <StackPanel Grid.Row="1" Margin="20" VerticalAlignment="Center">
                <TextBlock Text="Backend URL'i bulunamadı. Lütfen Backend URL'ini girin:" 
                          Foreground="#94a3b8" 
                          FontSize="13" 
                          Margin="0,0,0,15"
                          TextWrapping="Wrap"/>
                
                <TextBox x:Name="BackendUrlTextBox"
                         Text="http://localhost:5000"
                         Background="#1e293b"
                         Foreground="White"
                         BorderBrush="#334155"
                         BorderThickness="1"
                         Padding="10,8"
                         FontSize="13"
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="Örnek: http://192.168.1.100:5000 veya http://localhost:5000" 
                          Foreground="#64748b" 
                          FontSize="11" 
                          Margin="0,0,0,0"/>
            </StackPanel>
            
            <!-- Buttons -->
            <Border Grid.Row="2" Background="#1e293b" CornerRadius="0,0,8,8" Padding="20,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="İptal" 
                            Width="100" 
                            Height="35" 
                            Background="#334155" 
                            Foreground="White" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="CancelButton_Click"
                            Margin="0,0,10,0"/>
                    <Button Content="Kaydet" 
                            Width="100" 
                            Height="35" 
                            Background="#00A8FF" 
                            Foreground="White" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="SaveButton_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>





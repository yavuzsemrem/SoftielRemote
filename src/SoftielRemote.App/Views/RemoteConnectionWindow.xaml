<Window x:Class="SoftielRemote.App.Views.RemoteConnectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Uzak BaÄŸlantÄ±" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#0f172a"
        ResizeMode="CanResize"
        WindowStyle="None"
        AllowsTransparency="True"
        MinWidth="800"
        MinHeight="500">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <!-- Window Controls -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#1e293b" Height="40" MouseLeftButtonDown="Window_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="Uzak BaÄŸlantÄ±" 
                          Foreground="White" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"
                          Margin="15,0,0,0"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="ðŸ—•" 
                           Width="42" Height="36" 
                           Background="Transparent" 
                           Foreground="White"
                           BorderThickness="0"
                           Click="MinimizeButton_Click"
                           Cursor="Hand"
                           Margin="0,0,8,0"/>
                    <Button Content="âœ•" 
                           Width="42" Height="36" 
                           Background="Transparent" 
                           Foreground="White"
                           BorderThickness="0"
                           Click="CloseButton_Click"
                           Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Loader Overlay -->
            <Border x:Name="LoaderOverlay"
                   Background="#80000000"
                   Visibility="{Binding IsConnecting, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Panel.ZIndex="1000">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="â³" 
                              FontSize="48" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,20"/>
                    <TextBlock Text="BaÄŸlanÄ±lÄ±yor..." 
                              Foreground="White" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding ConnectionStatus}" 
                              Foreground="#94a3b8" 
                              FontSize="14"
                              HorizontalAlignment="Center"
                              Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Remote Screen -->
            <Border Background="#000000" 
                   CornerRadius="8" 
                   Margin="20"
                   BorderBrush="#334155"
                   BorderThickness="1">
                <Grid>
                    <Image Source="{Binding RemoteScreenImage}" 
                          Stretch="Uniform"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                    
                    <!-- No Connection Message -->
                    <TextBlock Text="BaÄŸlantÄ± bekleniyor..." 
                              Foreground="#64748b" 
                              FontSize="16"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Visibility="{Binding IsConnected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverse}"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

